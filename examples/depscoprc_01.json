{
    "global": {
        "colors": {
            "core": "red",
            "io": "green",
            "usecase": "blue"
        },
        "allowed": {
            "io": ["core", "io", "usecase"],
            "usecase": ["core", "usecase"],
            "core": ["core"]
        }
    },
    "csharp": {
        "pattern": "regex",
        "caseSensitive": "true",
        "projects":{
                "core": ".*\\.Entities\\..*\\.csproj$",
                "io": ".*\\.IO\\..*\\.csproj$",
                "usecase": ".*\\.UseCase\\..*\\.csproj$"
        },
        "namespaces": {
            "core": ".*\\.Entities\\..*",
            "io": ".*\\.IO\\..*",
            "usecase": ".*\\.UseCase\\..*"
        }
    }
}
