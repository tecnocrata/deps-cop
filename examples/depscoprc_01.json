{
    "global": {
        "colors": {
            "core": "#FBFDB8",
            "io": "#A7D7FD",
            "usecase": "#FEA29C"
        },
        "allowed": {
            "io": ["core", "io", "usecase"],
            "usecase": ["core", "usecase"],
            "core": ["core"]
        }
    },
    "csharp": {
        "pattern": "regex",
        "caseSensitive": "true",
        "projects":{
                "core": ".*\\.Entities.*\\.csproj$",
                "io": ".*\\.IO.*\\.csproj$",
                "usecase": ".*\\.UseCase.*\\.csproj$"
        },
        "projectExclude": {
            "core": [],
            "io": [],
            "usecase": []
        },
        "namespaces": {
            "core": ".*\\.Entities\\..*",
            "io": ".*\\.IO\\..*",
            "usecase": ".*\\.UseCase\\..*"
        }
    }
}
