{
    "global": {
        "colors": {
            "core": "#FBFDB8",
            "io": "#A7D7FD",
            "usecase": "#FEA29C"
        },
        "allowed": {
            "io": ["core", "io", "usecase"],
            "usecase": ["core", "usecase"],
            "core": ["core"]
        }
    },
    "csharp": {
        "pattern": "regex",
        "case_sensitive": true,
        "exclude_folders": ["bin", "obj"],
        "projects": {
            "core": ".*\\.Entities.*\\.csproj$",
            "io": ".*\\.IO.*\\.csproj$",
            "usecase": ".*\\.UseCases.*\\.csproj$"
        },
        "namespaces": {
            "core": ".*\\.Entities(\\..*)?$",
            "io": ".*\\.IO(\\..*)?$",
            "usecase": ".*\\.UseCases(\\..*)?$"
        }
    }
}