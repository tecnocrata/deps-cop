{
    "global": {
        "colors": {
            "core": "red",
            "io": "green",
            "usecase": "blue"
        },
        "allowed": {
            "io": ["core", "io", "usecase"],
            "usecase": ["core", "usecase"],
            "core": ["core"]
        }
    },
    "csharp": {
        "pattern": "wildcard",
        "case_sensitive": false,
        "exclude": {
            "folders": ["bin","obj"],
            "projects": [],
            "namespaces": []
        },
        "projects": {
            "core": "*Entities*.csproj$",
            "io": ["*IO*.csproj$", "Csd.Api.csproj"],
            "usecase": "*UseCases*.csproj$"
        },
        "namespaces": {
            "core": "*Entities*",
            "io": "*IO*",
            "usecase": "*UseCase*"
        }
    },
    "javascript": {
        "pattern": "wildcard",
        "case_sensitive": false,
        "exclude_folders": ["node_modules"],
        "exclude": {
            "folders": ["node_modules"],
            "files": []
        },
        "folders": {
            "core": "*Entities*",
            "io": "*IO*",
            "usecase": "*UseCase*"
        }
    }
}