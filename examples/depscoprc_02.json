{
    "global": {
        "colors": {
            "core": "red",
            "io": "green",
            "usecase": "blue"
        },
        "allowed": {
            "io": ["core", "io", "usecase"],
            "usecase": ["core", "usecase"],
            "core": ["core"]
        }
    },
    "csharp": {
        "pattern": "wildcard",
        "caseSensitive": "false",
        "excludeFolders": ["bin", "obj"],
        "projects":{
            "core": "*Entities*.csproj$",
            "io": ["*IO*.csproj$","Csd.Api.csproj"],
            "usecase": "*UseCases*.csproj$"
        },
        "namespaces": {
            "core": "*Entities*",
            "io": "*IO*",
            "usecase": "*UseCase*"
        }
    },
    "javascript":{
        "pattern":"wildcard",
        "caseSensitive":"false",
        "excludeFolders":["node_modules"],
        "folders":{
            "core":"*Entities*",
            "io":"*IO*",
            "usecase":"*UseCase*"
        }
    }
}
