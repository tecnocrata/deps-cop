{
    "global": {
        "colors": {
            "core": "red",
            "io": "green",
            "usecase": "blue"
        },
        "allowed": {
            "io": ["core", "io", "usecase"],
            "usecase": ["core", "usecase"],
            "core": ["core"]
        }
    },
    "csharp": {
        "pattern": "wildcard",
        "caseSensitive": "false",
        "projects":{
                "core": "*Entities*.csproj$",
                "io": ["*IO*.csproj$","Csd.Api.csproj"],
                "usecase": "*UseCase*.csproj$"
        },
        "namespaces": {
            "core": "*Entities*",
            "io": "*IO*",
            "usecase": "*UseCase*"
        }
    },
    "javascript":{
        "pattern":"wildcard",
        "caseSensitive":"false",
        "folders":{
            "core":"*Entities*",
            "io":"*IO*",
            "usecase":"*UseCase*"
        }
    }
}
